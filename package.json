{
  "name": "micro-rpc-client",
  "version": "0.1.4",
  "description": "Universal JS client for micro-rpc",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "lint": "eslint . --ignore-pattern coverage node_modules",
    "test": "npm run lint && jest --coverage",
    "test-watch": "jest --watch",
    "test-update": "jest -u"
  },
  "jest": {
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bufferapp/micro-rpc-client.git"
  },
  "keywords": [
    "rpc",
    "client"
  ],
  "author": "hharnisc@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bufferapp/micro-rpc-client/issues"
  },
  "homepage": "https://github.com/bufferapp/micro-rpc-client#readme",
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "jest": "^19.0.2"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1"
  },
  "files": [
    "index.js"
  ]
}
